rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Fonction pour vérifier si l'utilisateur est administrateur
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@ultrai.com';
    }
    
    // Articles peuvent être lus par tout le monde mais modifiés uniquement par l'admin
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Configurations ne peuvent être lues et modifiées que par l'admin
    match /config/{configId} {
      allow read, write: if isAdmin();
    }
  }
}
